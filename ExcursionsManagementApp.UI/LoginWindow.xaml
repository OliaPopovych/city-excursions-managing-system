        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcursionsManagementApp.UI"
        mc:Ignorable="d"
        Title="LoginWindow" WindowStartupLocation="CenterScreen" Background="AliceBlue" Height="300" Width="496">
    <Grid Margin="0,0,2,-3">
        <TextBox x:Name="textBoxLogin" TextWrapping="Wrap" Text="" Margin="105,72,100,170"/>
        <TextBox x:Name="textBoxPassword" TextWrapping="Wrap" Text="" Margin="105,142,100,100"/>
        <Button x:Name="buttonLogin" Content="Log in" HorizontalAlignment="Left" Margin="209,206,0,0" VerticalAlignment="Top" Width="75" Click="buttonLogin_Click"/>
        <Label x:Name="label" Content="Login" HorizontalAlignment="Left" Margin="105,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.026,0.115"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="105,116,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
